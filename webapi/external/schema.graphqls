"""
A single to-do item.
"""
type local_todo_item {
    """
    Internal database ID of the to-do item.
    """
    id: core_id!
    """
    Title of the to-do item.
    """
    title: String
    """
    The time the to-do item was marked completed.
    """
    completed_at: core_date
}

"""
Result of the local_todo_items query.
"""
type local_todo_items_result {
    """
    A list of to-do items.
    """
    items: [local_todo_item!]!
}

extend type Query {
    """
    Retrieve all to-do items.
    """
    local_todo_items(user: core_user_user_reference!): local_todo_items_result!
}